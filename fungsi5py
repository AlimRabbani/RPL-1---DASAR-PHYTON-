#memahami fungsi dan prosedur pada phyton 

# membuat variabel global 
nama = "alim rabbani"
versi = "1.0.0"

def help():
    # ini variabel lokal
    nama = "Programku"
    versi = "1.0.2"
    # mengakses variabel lokal
    print ("Nama: %s" % nama)
    print ("Versi: %s" % versi)


# mengakses variabel global
print ("Nama: %s" % nama)
print ("Versi: %s" % versi)

# memanggil fungsi help()
help()  

# terimakasih 
nama = "Luffy"
versi = "8.8.0"

def help():
    # ini variabel lokal
    nama = "zoro"
    versi = "1.0.7"
    # mengakses variabel lokal
    print ("Nama: %s" % nama)
    print ("Versi: %s" % versi)


# mengakses variabel global
print ("Nama: %s" % nama)
print ("Versi: %s" % versi)

# memanggil fungsi help()
help()  
 